          span.emali etunimi.sukunimi@osoite.com
        li
          span.name Eetu Etuniminen
          span.emali etunimi.sukunimi@osoite.com
    form.add-recipients
      input.field.wide(type='text' placeholder='Lisää ryhmiin kuulumattomia sähköpostiosoitteita')
        a.btn.add-row(href='#')
          span.plus-icon
    .hr
    form.send-message
      textarea.wide(type='textarea' placeholder='Viestin sisältö')
      select
        option(value='') Valitse asiakirjapohja
        option(value='asiakirjapohja') Joku asiakirja
