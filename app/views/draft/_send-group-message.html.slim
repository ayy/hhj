      p.label Ryhmäviestin vastaanottajat:
      ul.list-of-recipients
        li
          span.name Eetu Etuniminen
          span.emali etunimi.sukunimi@osoite.com
        li
          span.name Eetu Etuniminen
          span.emali etunimi.sukunimi@osoite.com
        li
