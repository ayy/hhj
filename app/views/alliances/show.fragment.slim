.modal#alliance
  .content
    h2
      = t ".title"
      a.close-modal(href='#')
    .item-block
      p.label
        = Alliance.human_attribute_name(:name)
        | :
      p.text = @alliance.name
    .item-block
      p.label
        = Alliance.human_attribute_name(:creator)
        | :
      p.text = @alliance.creator.full_name
    .item-block
      p.label
        = Call.model_name.human
        | :
      p.text = @alliance.call.title if @alliance.call
    .item-block
      p.label
        = t('alliances.unconfirmed_members')
        | :
      p.list
        ul#unconfirmed_members
          =@alliance.alliance_memberships.where(confirmed:false).map{|ap| content_tag :li, h(ap.position_application.user.full_name)}.join.html_safe
    .item-block
      p.label
        = t('alliances.confirmed_members')
        | :
      p.list
        ul#confirmed_members
          =@alliance.alliance_memberships.where(confirmed:true).map{|ap| content_tag :li, h(ap.position_application.user.full_name)}.join.html_safe

