/*Global styles*/

html {
  box-sizing: border-box;
}
*, *:before, *:after {
  box-sizing: inherit;
}

/* TEXT STYLES */
basic-fonts = 'Helvetica Neue', Helvetica, Arial, sans-serif

html, body
  font-family: basic-fonts
  color: #333
  font-size: 12px

h1
  font-size: 20px
  font-weight: bold
  text-shadow: 0 1px 0 #FFF
  color: #333
  margin: 0 0 0 0
 
h2
  color: #666
  font-size: 16px
  font-weight: bold
  text-shadow: 0 1px 0 #FFF
  margin: 0 0 6px 0

h3
  font-size 13px
  line-height 16px
  margin 10px 0 0 0

h4
  font-size: 12px
  font-weight: bold
  line-height: 17px
  margin: 12px 0 8px 0

p
  font-size: 12px
  line-height: 17px
  margin: 4px 0 8px 0

a
  color #336699
a:hover
  color #003366

.js-data
  display none

/*Opera Fix*/
body:before
  content: ""
  height: 100%
  float: left
  width: 0
  margin-top: -32767px

